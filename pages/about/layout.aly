{ScrollView,
  layout_width="match",
  layout_height="match",
  clipToPadding=false,
  clipChildren=false,
  fillViewport=true,
  {LinearLayout,
    layout_width="match",
    layout_height="match",
    layout_marginLeft="16dp",
    layout_marginRight="16dp",
    orientation=1,
    {MaterialCardView,
      layout_height="wrap",
      layout_width="fill",
      layout_marginTop="24dp",
      {LinearLayout,
        layout_height="wrap",
        layout_width="match",
        orientation=1,
        padding="24dp",
        {TextView,
          id="message",
          textSize="16sp",
          layout_marginTop="8dp",
          textColor="#444444",
        },
       {TextView,
          id="title",
          textSize="18sp",
          textStyle="bold",
          textColor="#000000",
        },
       {TextView,
          id="changelog",
          textSize="16sp",
          layout_marginTop="8dp",
          textColor="#444444",
        },
      },
    }, 
   {RelativeLayout,
      layout_width="wrap",
      {MaterialButton,
        id="joinGroup",
        text="进群唠嗑",
        layout_width="wrap",
        layout_alignParentLeft="true",
        layout_marginLeft="24dp",
      },
      {MaterialButton,
        id="checkUpdate",
        text="检查更新",
        layout_width="wrap",
        layout_marginLeft="120dp",
        layout_alignParentLeft="true",
      },
      {MaterialButton,
        id="reportBugs",
        text="错误报告",
        layout_width="wrap",
        layout_alignParentRight="true",
        layout_marginRight="24dp",
      },
    },
 
  }
}